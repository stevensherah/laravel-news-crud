<section class="box">
	<h4 class="h2">
		<span class="box__title-i">{{ trans('news::tags.box.title') }}</span>
	</h4>

	<ul class="categories-list">
		{% for category in categories -%}
			<li class="categories-list__item">
				<a rel="nofollow" href="{{ category.url }}"
				   class="tag tags-list__tag{% if category_active == tag.slug %} tag_active{% endif %}">{{ category.name }}</a>
			</li>
		{% endfor -%}
	</ul>

</section>