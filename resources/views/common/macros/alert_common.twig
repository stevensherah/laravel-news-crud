{% macro alert(message) %}
	<div class="alert alert-{{ message.type }} alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="{{ trans('news::modal.btn_close') }}"><span
					aria-hidden="true">&times;</span></button>
		{{ message.text }}
	</div>
{% endmacro alert %}